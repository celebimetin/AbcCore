@addTagHelper "*, Abc.MvcWebUI.TagHelpers"
@model ProductListViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<div>
    <table class="table">
        <tr>
            <td>Product Name</td>
            <td>Unit Price</td>
            <td>Unit In Stock</td>
        </tr>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.UnitsInStock</td>
            </tr>
        }
    </table>
</div>

<product-list-pager page-size="@Model.PageSize"
                    page-count="@Model.PageCount"
                    current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage"></product-list-pager>